<?xml version="1.0" encoding="UTF-8"?>
<Context>

    <!--<Parameter name="run.import.export.threads" value="false" override="false"/>-->

    <Parameter name="xml.archive.directory" value="${xml.archive.directory}" override="false"/>
    <Parameter name="xml.directory" value="${xml.directory}" override="false"/>
    <Parameter name="xml.patient.data.load.directory" value="${xml.patient.data.load.directory}" override="false"/>
    <Parameter name="xml.minutes.to.wait" value="${xml.minutes.to.wait}" override="false"/>

    <Parameter name="ukt.archive.directory" value="${ukt.archive.directory}" override="false"/>
    <Parameter name="ukt.directory" value="${ukt.directory}" override="false"/>
    <Parameter name="ukt.minutes.to.wait" value="${ukt.minutes.to.wait}" override="false"/>

    <Parameter name="uktexport.archive.directory" value="${uktexport.archive.directory}" override="false"/>
    <Parameter name="uktexport.directory" value="${uktexport.directory}" override="false"/>
    <Parameter name="uktexport.minutes.to.wait" value="${uktexport.minutes.to.wait}" override="false"/>

    <Parameter name="dataout.archive.directory" value="${dataout.archive.directory}" override="false"/>
    <Parameter name="dataout.directory" value="${dataout.directory}" override="false"/>
    <Parameter name="dataout.directory.thirdpart" value="${dataout.directory.thirdpart}" override="false"/>
    <Parameter name="dataout.minutes.to.wait" value="${dataout.minutes.to.wait}" override="false"/>

    <Parameter name="unitstatfiles.directory" value="${unitstatfiles.directory}" override="false"/>

    <Parameter name="aboutme.image.directory" value="${aboutme.image.directory}" override="false"/>

    <Parameter name="default.results.per.page" value="${default.results.per.page}" override="false"/>

    <Parameter name="smtp.host" value="${smtp.host}" override="false"/>
    <Parameter name="admin.email.from" value="${admin.email.from}" override="false"/>
    <Parameter name="admin.email.to" value="${admin.email.to}" override="false"/>
    <Parameter name="support.email" value="${support.email}" override="false"/>
    <Parameter name="noreply.email" value="${noreply.email}" override="false"/>

    <Parameter name="email.verification.best.before.days" value="${email.verification.best.before.days}" override="false"/>

  <Resource auth="Container"
            description="DB Connection"
            driverClass="com.mysql.jdbc.Driver"
            maxPoolSize="4"
            minPoolSize="2"
            maxConnectionAge="30"
            maxIdleTime="30"
            acquireIncrement="1"
            name="jdbc/patientview"
            user="${jdbc.username}"
            password="${jdbc.password}"
            factory="org.apache.naming.factory.BeanFactory"
            type="com.mchange.v2.c3p0.ComboPooledDataSource"
            jdbcUrl="${jdbc.url}" />

    <Logger className="org.apache.catalina.logger.FileLogger"
            prefix="renalpatientview.org_patientview_log." suffix=".txt"
            timestamp="true"/>


    <WatchedResource>WEB-INF/web.xml</WatchedResource>
    <WatchedResource>META-INF/context.xml</WatchedResource>
</Context>
