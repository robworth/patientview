<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="emailManager" class="com.solidstategroup.radar.service.impl.EmailManagerImpl"/>

    <bean id="userManager" class="com.solidstategroup.radar.service.impl.UserManagerImpl">
        <property name="emailManager" ref="emailManager"/>
        <property name="demographicsDao" ref="demographicsDao"/>
        <property name="userDao" ref="userDao"/>
    </bean>

</beans>